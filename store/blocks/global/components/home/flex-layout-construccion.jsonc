{
    "flex-layout.row#home_section--construcción-d":{
        "title":"Sección construcción",
        "children": [
          "flex-layout.col#section--one--construcción",
          "flex-layout.col#section--two--construcción"
         
        ],
        "props":{
          "blockClass":"construccion_row",
          "colSizing":"auto",
          "colJustify": "around",
          "horizontalAlign":"center",
          "colGap":2
         
          
        }
    },
    "flex-layout.col#section--one--construcción":{
        "children":[
          "image#construcción--one"
        ],
        "props":{
          "blockClass":"col_one--const"
        }
      },
      "flex-layout.col#section--two--construcción": {
        "children": [
          "list-context.product-list#product_summary"
        ],
        "props": {
          "width": "100%",
          "blockClass":"col_two--const"
        }
      },
    
      "list-context.product-list#product_summary": {
        "title": "list context Juegos y accesorios",
        "blocks": ["product-summary.shelf"],
        "children":["slider-layout#product_summary"],
        "props": {
          "blockClass": "product-summary"
        }
      },
      "slider-layout#product_summary":{
        "props":{
          "itemsPerPage":{
            "desktop":3
          },
          "infinite": true,
          "fullWidth": false,
          "blockClass": "slider-product-summary",
          /* "autoplay": {
            "timeout": 3000,
            "stopOnHover": true
          }, */
          "arrowSize":40
        }
      }
}